<select class="w_language-select">
<?php foreach($this->langList as $lang => $name): ?>
    <?php if (null !== ($langCode = Zend_Locale::getLocaleToTerritory($lang)) && isset($this->urls[$langCode]['url'])): ?>
    <option value="<?php echo $this->urls[$langCode]['url']; ?>"
            data-lang="<?php echo $lang; ?>"
            <?php echo ($this->activeLang === $langCode) ? ' selected="selected"' : '' ?>>
        <?php echo $name; ?>
    </option>
    <?php endif; ?>
<?php endforeach; ?>
</select>
<script>
    $(function() {
        $('select.w_language-select').on('change', function() {
            var $this = $(this);
            document.cookie = 'userLanguage='+$(':selected', $this).data('lang');
            window.location = ($('#website_url').val())+$this.val();
        });
    });
</script>
